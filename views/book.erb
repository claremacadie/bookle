<h2><%= @book[:title] %> by <%= @book[:authors] %></h2>
<p>Part of the <%= @book[:collection] %> collection</p>
<p>Belongs to the categories: <%= @book[:categories] %><p>
<p>Owned by </p>
<ul>
  <% @book_instances.each do |book| %>
    <li>
      <%= book[:owner] %> - 
      <% if book[:available] %>
        available
      <% else %>
        on loan
      <% end %>
    <a href="/book/edit/<%= book[:book_instance_id] %>/<%= book[:book_id] %>">Edit</a>
    <li>
  <% end %>
</ul>