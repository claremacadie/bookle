<h1>Add a new book</h1>

<form action="/book/add_new" method="post">
  <dl>
    <dt><label for="title">Title</label></dt>
    <dd><input id="title" type="text" name="title" value=""></dd>
    <dt><label for="authors">Author</label></dt>
    <dd><input id="authors" type="text" name="author" value=""></dd>
    
    <dt><label for="categories">Categories</label></dt>
    <dd>
      <% @categories.each do |category| %>
        <ul>
          <li>
            <label>
              <input 
                type="checkbox" 
                value="<%= category[:id] %>" 
                name="category_id_<%= category[:id] %>"
              />
              <%= category[:name] %>
            </label>
          </li>
        </ul>
      <% end %>
    </dd> 
  </dl>
  <button type="submit">Add new book</button>
</form>