<h1>Search books</h1>

<form action="/books/filter" method="post">
  <dl>
    <dt><label for="title">Title</label></dt>
    <dd><input id="title" type="text" name="title" value=""></dd>
    <dt><label for="authors">Author</label></dt>
    <dd><input id="authors" type="text" name="author" value=""></dd>
    
    <dt><label for="categories">Categories</label></dt>
    <dd>
      <% @categories.each do |category| %>
        <ul>
          <li>
            <label>
              <input 
                type="checkbox" 
                value="<%= category[:id] %>" 
                name="category_id_<%= category[:id] %>"
              />
              <%= category[:name] %>
            </label>
          </li>
        </ul>
      <% end %>
    </dd> 
    <dt><label for="availability">Availability</label></dt>
    <dd>
      <ul>
        <li>
          <label>
            <input type="checkbox" value="availability" name="available"/>
            Available
          </label>
        </li>
        <li>
          <label>
            <input type="checkbox" value="availability" name="requested"/>
            Requested
          </label>
        </li>
        <li>
          <label>
            <input type="checkbox" value="availability" name="on_loan"/>
            On loan
          </label>
        </li>
      </ul>
    </dd> 
  </dl>
  <button type="submit">See Results</button>
</form>